# Domain
# This would be set to the production domain with an env var on deployment
# used by Traefik to transmit traffic and acquire TLS certificates
DOMAIN=localhost

# Used by the backend to generate links in emails to the frontend
FRONTEND_HOST=http://localhost:5173

# Environment: local, staging, production
ENVIRONMENT=local

PROJECT_NAME="Full Stack FastAPI Project"
STACK_NAME=full-stack-fastapi-project

# Backend
BACKEND_CORS_ORIGINS="http://localhost,http://localhost:5174,https://localhost,https://localhost:5174"
SECRET_KEY=changethis
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis
LEDGER_PATH=/data/ledger

# Emails
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin

SENTRY_DSN=

# Open user registration (set to true to allow signups)
USERS_OPEN_REGISTRATION=false

# Configure these with your own Docker registry images
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend

# Ntfy notification configuration (uses ntfy.sh public server)
NTFY_INTERNAL_URL=https://ntfy.sh
NOTIFICATION_HOUR=22
NOTIFICATION_MINUTE=0

# S3-compatible storage (Garage)
# For local development, use the Garage container
# `scripts/dev-watch.sh` will auto-generate/persist Garage credentials in .env
# when these are blank or invalid.
S3_ENDPOINT_URL=http://localhost:3900
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=statements
S3_REGION=garage

# OpenRouter API for LLM-based PDF extraction
# Get your API key from https://openrouter.ai
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_OCR_MODELS=google/gemini-flash-1.5,google/gemini-pro-1.5
OPENROUTER_STATEMENT_MODELS=google/gemini-pro-1.5,google/gemini-pro-1.5

# ZAI API for OCR + statement extraction
# Get your API key from https://platform.z.ai
ZAI_API_KEY=your_zai_api_key
ZAI_OCR_MODELS=glm-ocr,glm-ocr
ZAI_STATEMENT_MODELS=glm-4.5-air,glm-4.5-air

# Extraction provider backend (openrouter | zai)
EXTRACTION_PROVIDER=openrouter
# Optional split providers (override EXTRACTION_PROVIDER when set)
# Example mix: OCR on ZAI + statement on OpenRouter/Groq-model
# EXTRACTION_OCR_PROVIDER=zai
# EXTRACTION_STATEMENT_PROVIDER=openrouter
# OPENROUTER_STATEMENT_MODELS=llama-3.3-70b-versatile,openai/gpt-oss-120b
EXTRACTION_OCR_PROVIDER=
EXTRACTION_STATEMENT_PROVIDER=
# Heartbeat log while waiting on model responses (seconds, <=0 disables)
EXTRACTION_WAIT_LOG_INTERVAL_SECONDS=10

# Exchange rate API for currency conversion
# Get your API key from https://exchangerate-api.com or similar
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
