# Production environment for DuckDNS
# App endpoints:
# - Frontend: https://creditscan.duckdns.org
# - API:      https://creditscanapi.duckdns.org

# Public domains used by docker-compose.yml
FRONTEND_DOMAIN=creditscan.duckdns.org
API_DOMAIN=creditscanapi.duckdns.org
# Optional, only if you run `--profile admin`
ADMINER_DOMAIN=adminer.creditscan.duckdns.org

# Backend app URLs
FRONTEND_HOST=https://creditscan.duckdns.org
BACKEND_CORS_ORIGINS=https://creditscan.duckdns.org

# Environment
ENVIRONMENT=production
PROJECT_NAME=CreditScan
STACK_NAME=creditscan-duckdns-org
TAG=latest

# Security / bootstrap admin
SECRET_KEY=replace_with_a_long_random_secret
FIRST_SUPERUSER=admin@creditscan.duckdns.org
FIRST_SUPERUSER_PASSWORD=replace_with_a_strong_password
USERS_OPEN_REGISTRATION=false

# Ledger path inside backend container
LEDGER_PATH=/data/ledger

# SMTP (leave blank to disable outbound email features)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
SMTP_TLS=true
SMTP_SSL=false
SMTP_PORT=587

# Postgres
POSTGRES_SERVER=db
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=admin
POSTGRES_PASSWORD=replace_with_a_strong_postgres_password

# Observability
SENTRY_DSN=

# Docker image names used by compose
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend

# Notifications
NTFY_INTERNAL_URL=https://ntfy.sh
NOTIFICATION_HOUR=22
NOTIFICATION_MINUTE=0

# S3-compatible storage (Garage)
S3_ENDPOINT_URL=http://garage:3900
S3_ACCESS_KEY=replace_with_garage_access_key
S3_SECRET_KEY=replace_with_garage_secret_key
S3_BUCKET=app-storage
S3_REGION=us-east-1

# Extraction providers
EXTRACTION_PROVIDER=groq
EXTRACTION_OCR_PROVIDER=
EXTRACTION_STATEMENT_PROVIDER=
EXTRACTION_WAIT_LOG_INTERVAL_SECONDS=10

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_OCR_MODELS=google/gemini-flash-1.5,google/gemini-pro-1.5
OPENROUTER_STATEMENT_MODELS=google/gemini-pro-1.5,google/gemini-pro-1.5

# ZAI
ZAI_API_KEY=
ZAI_OCR_MODELS=glm-ocr,glm-ocr
ZAI_STATEMENT_MODELS=glm-4.5-air,glm-4.5-air

# Groq
GROQ_API_KEY=
GROQ_OCR_MODELS=meta-llama/llama-4-maverick-17b-128e-instruct,meta-llama/llama-4-maverick-17b-128e-instruct
GROQ_STATEMENT_MODELS=openai/gpt-oss-120b,openai/gpt-oss-120b

# Exchange rate task
EXCHANGE_RATE_API_KEY=
CRONISTA_URL=https://www.cronista.com/MercadosOnline/moneda/ARSMEP/
RATE_EXTRACTION_HOUR=21
RATE_EXTRACTION_MINUTE=0
